<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ioka_color_background_primary"
    android:orientation="vertical"
    tools:theme="@style/Theme.AppCompat">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/vToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_close"
        app:titleCentered="true"
        app:titleTextColor="@color/ioka_color_text_primary"
        tools:title="@string/new_card" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/cardNumberContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edittext"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <kz.ioka.android.ioka.uikit.FormattedNumberEditText
            android:id="@+id/etCardNumber"
            style="@style/PrimaryEditText.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:hint="@string/card_number_hint"
            android:inputType="number"
            android:maxLength="19"
            app:groupLength="4"
            app:groupSeparator=" "
            app:numberOfGroups="5" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEmitter"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_issuing_bank"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="invisible"
            tools:srcCompat="@drawable/ic_bank_kaspi"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBrand"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_issuing_bank"
            android:visibility="invisible"
            tools:srcCompat="@drawable/ic_ps_visa"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnScan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/ioka_color_static_transparent"
            android:tint="@color/ioka_color_text_secondary"
            app:srcCompat="@drawable/ic_camera" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <kz.ioka.android.ioka.uikit.FormattedNumberEditText
            android:id="@+id/etExpireDate"
            style="@style/PrimaryEditText.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:autofillHints="creditCardNumber"
            android:background="@drawable/bg_edittext"
            android:hint="@string/expire_date_hint"
            android:inputType="date"
            android:maxLength="5"
            android:padding="16dp"
            app:groupLength="2"
            app:groupSeparator="/"
            app:numberOfGroups="2" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCvv"
            style="@style/PrimaryEditText.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:autofillHints="creditCardNumber"
            android:background="@drawable/bg_edittext"
            android:hint="@string/cvv_hint"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:padding="16dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <kz.ioka.android.ioka.uikit.ErrorView
            android:id="@+id/vError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="16dp" />

    </FrameLayout>

    <kz.ioka.android.ioka.uikit.StateButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:sbText="@string/common_save" />

</androidx.appcompat.widget.LinearLayoutCompat>