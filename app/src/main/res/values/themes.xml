<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.IokaDemoApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ui_color_primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/ui_color_background</item>
        <item name="android:fontFamily">@font/font_inter</item>
        <item name="fontFamily">@font/ui_font</item>
    </style>

    <!--  TextView  -->
    <style name="IokaPrimaryTextView">
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="PrimaryTextView.14" parent="IokaPrimaryTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryTextView.16" parent="IokaPrimaryTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryTextView.20" parent="IokaPrimaryTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IokaMediumPrimaryTextView" parent="IokaPrimaryTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumPrimaryTextView.16" parent="IokaMediumPrimaryTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumPrimaryTextView.18" parent="IokaMediumPrimaryTextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumPrimaryTextView.20" parent="IokaMediumPrimaryTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MediumPrimaryTextView.28" parent="IokaMediumPrimaryTextView">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="IokaSecondaryTextView">
        <item name="android:textColor">@color/text_secondary_color</item>
    </style>

    <style name="SecondaryTextView.14" parent="IokaSecondaryTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondaryTextView.16" parent="IokaSecondaryTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Button  -->
    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_main_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/static_white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="MainButton.16">
        <item name="android:textSize">16sp</item>
    </style>
</resources>