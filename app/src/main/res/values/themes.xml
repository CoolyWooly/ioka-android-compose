<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IokaDemoApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ui_color_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#94AA64</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ui_color_background</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  TextView  -->
    <style name="PrimaryTextView">
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="PrimaryTextView.14" parent="PrimaryTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryTextView.16" parent="PrimaryTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryTextView.20" parent="PrimaryTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MediumPrimaryTextView" parent="PrimaryTextView">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="MediumPrimaryTextView.16" parent="MediumPrimaryTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumPrimaryTextView.18" parent="MediumPrimaryTextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumPrimaryTextView.20" parent="MediumPrimaryTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MediumPrimaryTextView.28" parent="MediumPrimaryTextView">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SecondaryTextView">
        <item name="android:textColor">@color/text_secondary_color</item>
    </style>

    <style name="SecondaryTextView.14" parent="SecondaryTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondaryTextView.16" parent="SecondaryTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Button  -->
    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_main_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/static_white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="MainButton.16">
        <item name="android:textSize">16sp</item>
    </style>
</resources>